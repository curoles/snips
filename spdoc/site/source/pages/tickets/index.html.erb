---
title: Ticket
blog: tickets
pageable: true
per_page: 10
---

<!--copy of https://github.com/middleman/middleman-templates-blog/blob/master/template/source/index.html.erb-->

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>


<table class="table table-striped">
    <tr> <th>#</th> <th>Title</th> <th>Status</th> <th>Progress</th>
         <th>Assignee</th> <th>Creator</th> <th>Date</th>
         <th>Category</th> <th>Tags</th>
    </tr>
<% page_articles.each_with_index do |article, i| %>
    <tr> <td><%= i %></td> 
         <td><%= link_to article.title, article %></td>
         <td><%= article.data.status || '?' %></td>
         <td><%= (article.data.progress || '?')+'%' %></td>
         <td><%= article.data.assignee || '?' %></td>
         <td><%= article.metadata[:page][:user] %> </td>
         <td><%= article.date.strftime('%b %e') %></td>
         <td><%= article.metadata[:page][:category] %></td>
         <td><%= article.tags || '' %></td>
     </tr>
<% end %>
</table>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
